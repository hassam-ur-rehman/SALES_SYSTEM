<%- include('../partials/header', { title: title }) %>
<h2><%= title %></h2>
<% if (typeof error_msg !== 'undefined' && error_msg) { %><p style="color:red;"><%= error_msg %></p><% } %>
<form action="<%= action %><%= typeof returnTo !== 'undefined' && returnTo ? '?returnTo=' + encodeURIComponent(returnTo) : '' %>" method="POST">
    <div>
        <label for="category_name">Category Name*:</label>
        <input type="text" id="category_name" name="category_name" value="<%= typeof category !== 'undefined' ? category.category_name : '' %>" required>
    </div>
    <div>
        <label for="description">Description:</label>
        <textarea id="description" name="description"><%= typeof category !== 'undefined' ? category.description : '' %></textarea>
    </div>
    <button type="submit"><%= submitButtonText %></button>
    <a href="<%= typeof returnTo !== 'undefined' && returnTo ? returnTo : '/categories' %>">Cancel</a>
</form>
<%- include('../partials/footer') %>